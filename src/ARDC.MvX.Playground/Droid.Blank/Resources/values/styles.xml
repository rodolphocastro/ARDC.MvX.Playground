<resources>

  <!-- Tema do Aplicativo, com suporte a sobrescrita -->
  <style name="AppTheme" parent="AppTheme.Base">
    
  </style>

  <!-- Tema do SplashScreen -->
  <style name="AppTheme.Splash" parent="AppTheme.Base">
    <item name="android:colorBackground">@color/material_grey_300</item>
    <item name="android:windowBackground">?android:attr/colorBackground</item>
  </style>

  <!-- Tema base do aplicativo -->
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/colorPrimary</item>
    <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/colorPrimaryText</item>
    <item name="android:textColorSecondary">@color/colorAccentText</item>
    <item name="android:colorButtonNormal">@color/colorAccentLight</item>
    <item name="android:colorControlActivated">@color/colorAccentDark</item>
    <item name="android:colorControlNormal">@color/colorAccentLight</item>
  </style>

</resources>
